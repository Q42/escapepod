body {
  margin: 0;
  overflow: hidden;
  background-color: black;
  color: white;
}

video {
  width: 100vw;
  height: 100vh;
}

.hidden {
  display: none;
}

.admin {
  background-color: white;
  color: black;
  padding: 10px;

  section {
    margin: 40px 0;
  }
}

.puzzel3 {
  color: green;
  width: 100vw;
  height: 100vh;
  font-family: monospace;
  font-size: 20px;

  .uitleg {
    padding: 20px
    width: 50%;
  }
}

.prompt::before {
  margin-left: 20px;
  content: "$";
  color: green;
  font-size: 20px;
}

.prompt  input[type=text] {
    width: 80vw;
    background-color: black;
    border: none;
    color: green;
    cursor: text;
    margin-left: 10px;
    outline: none;
    font-size: 20px;
    font-weight: bold;
    font-family: monospace;
  }

.logs {
  list-style-type: square;
  color: green;
  font-family: monospace;
  font-size: 16px;
}

.warning {
    color: #f00;
}

.content {
    padding: 20px;
}
